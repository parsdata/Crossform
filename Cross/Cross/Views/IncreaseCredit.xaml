<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cross.Views.IncreaseCredit"
             xmlns:behaviors="clr-namespace:Cross.Data.Base">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblCredit" Margin="0,5,15,5" HorizontalOptions="End"/>
            <Entry Placeholder="مبلغ" Margin="15" Keyboard="Numeric" x:Name="txtAmount" HorizontalTextAlignment="Center">
                <!--<Entry.Behaviors>
                    <local:EntryLengthValidatorBehavior MaxLength="11" />
                </Entry.Behaviors>-->
                <!--<Entry.Behaviors>
                    <behaviors:EntryLengthValidatorBehavior MaxLength="12" />
                </Entry.Behaviors>-->
            </Entry>
            <Entry x:Name="txtDescription"  Margin="15" HorizontalTextAlignment="End" Placeholder="توضیحات">
                <!--<Entry.Behaviors>
                    <behaviors:EntryLengthValidatorBehavior MaxLength="500" />
                </Entry.Behaviors>-->
            </Entry>
            <Button Text="پرداخت / ادامه" Margin="15" Clicked="btnSubmit_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>