                <!--<Entry.Behaviors>
                    <local:MobileValidatorBehavior />
                    <local:EntryLengthValidatorBehavior MaxLength="11" />
                </Entry.Behaviors>-->
            </Entry>
            <Button Text="پرداخت / ادامه" Margin="15" Clicked="btnSubmit_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>